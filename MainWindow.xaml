<Window x:Class="MotionTrackingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Motion Tracking App" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Motion Tracking Application" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Background="LightBlue" Padding="10"/>
        
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" Background="Black" Margin="0,0,10,0">
                <TextBlock Text="VIDEO PREVIEW" Foreground="White" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            
            <StackPanel Grid.Column="1">
                <Button x:Name="btnSelectVideo" Content="Select Video" 
                        Click="BtnSelectVideo_Click" Margin="0,0,0,10" Padding="5"/>
                <Button x:Name="btnProcess" Content="Process" 
                        Click="BtnProcess_Click" Margin="0,0,0,10" Padding="5" IsEnabled="False"/>
                <Button x:Name="btnExport" Content="Export" 
                        Click="BtnExport_Click" Margin="0,0,0,10" Padding="5" IsEnabled="False"/>
                <TextBlock x:Name="txtVideoPath" Text="No video" Margin="0,0,0,5"/>
                <TextBlock x:Name="txtStatus" Text="Ready" Margin="0,0,0,5"/>
            </StackPanel>
        </Grid>
        
        <TextBlock Grid.Row="2" x:Name="statusBarText" Text="Ready" 
                   Background="LightGray" Padding="5"/>
    </Grid>
</Window>